<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="20sp"
            tools:text="No data"
            android:paddingVertical="4dp"
            android:textAlignment="center"
            tools:ignore="NotSibling"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/colorPrimary">


            <TextView
                android:id="@+id/widgetCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="No data"
                android:layout_toLeftOf="@id/widgetTemperature"
                android:layout_alignParentLeft="true"
                tools:ignore="NotSibling"/>
            <TextView
                android:id="@+id/widgetTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:layout_alignParentRight="true"
                tools:text="0 °C" />

            <ImageView
                android:id="@+id/widgetIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widgetTemperature"
                android:layout_alignParentRight="true"
                android:paddingRight="20sp"
                android:paddingTop="20sp"
                tools:ignore="NotSibling"
                />

            <TextView
                android:id="@+id/widgetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widgetCity"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="2019-01-01 00:00:00" />

            <TextView
                android:id="@+id/widgetDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="No data"
                android:layout_below="@id/widgetTime"
                android:layout_toLeftOf="@id/widgetTemperature"
                android:layout_alignParentLeft="true"
                tools:ignore="NotSibling"/>

            <TextView
                android:id="@+id/widgetWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="0 m/s"
                android:layout_below="@id/widgetDescription"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/widgetPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="0 hpa"
                android:layout_below="@id/widgetWind"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/widgetHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="0 %"
                android:layout_below="@id/widgetPressure"
                tools:ignore="NotSibling"/>
            <TextView
                android:id="@+id/widgetPrecip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widgetHumidity"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="0% rain" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            >

            <TextView
                android:id="@+id/widgetCity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:text="No data"
                android:layout_toLeftOf="@id/widgetTemperature2"
                android:layout_alignParentLeft="true"
                tools:ignore="NotSibling"/>

            <TextView
                android:id="@+id/widgetTemperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="27sp"
                android:layout_alignParentRight="true"
                tools:text="0 °C" />

            <ImageView
                android:id="@+id/widgetIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widgetTemperature2"
                android:layout_alignParentRight="true"
                android:paddingRight="20sp"
                android:paddingTop="20sp"
                tools:ignore="NotSibling"
                />

            <TextView
                android:id="@+id/widgetTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_below="@id/widgetCity2"
                android:textStyle="bold"
                tools:text="2019-01-01 00:00:00" />

            <TextView
                android:id="@+id/widgetDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                tools:text="No data"
                android:layout_below="@id/widgetTime2"
                android:layout_toLeftOf="@id/widgetTemperature2"
                android:layout_alignParentLeft="true"
                tools:ignore="NotSibling"/>

            <TextView
                android:id="@+id/widgetWind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                tools:text="0 m/s"
                android:layout_below="@id/widgetDescription2"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/widgetPressure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                tools:text="0 hpa"
                android:layout_below="@id/widgetWind2"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/widgetHumidity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                tools:text="0 %"
                android:layout_below="@id/widgetPressure2"
                tools:ignore="NotSibling"/>
            <TextView
                android:id="@+id/widgetPrecip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widgetHumidity2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                tools:text="0% rain" />

        </RelativeLayout>

    </LinearLayout>

